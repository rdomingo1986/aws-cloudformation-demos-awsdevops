{
  "Statement": [
    {
        "Effect": "Deny",
        "Principal": "*",
        "Action": "Update:*",
        "Resource": "*",
        "Condition": {
            "StringEquals": {
              "ResourceType": "AWS::EC2::Instance" 
            }
        }
    },
    {
        "Effect": "Allow",
        "Principal": "*",
        "Action": "Update:*",
        "Resource": "*"
    }
  ]
}